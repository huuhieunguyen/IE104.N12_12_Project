@model Funiture_Project.Models.RegisterVM

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div>
        <img src="./assets/img/login-bg.png"
             alt="login-background"
             class="object-fill w-full max-h-[860px] relative" />
        <!-- Đăng ký -->
        <form asp-action="SignUp" class="form-register" autocomplete="off">
            <div class="fadeUp absolute top-[25%] right-[80px] w-[618px] min-h-[550px] bg-white bg-opacity-70 rounded-lg flex justify-center flex-col p-[50px] gap-y-[38px]">
                <span class="text-[44px] font-bold text-[#FFB23F]">Đăng ký</span>
                <input asp-for="HoTen" type="text"
                       name="HoTen"
                       placeholder="Họ và Tên"
                       class="bg-white rounded-lg shadow h-[60px] w-[516px] p-[14px] font-bold text-2xl" />
                <input asp-for="SDT" type="text"
                       name="Sdt"
                       placeholder="Số điện thoại"
                       class="bg-white rounded-lg shadow h-[60px] w-[516px] p-[14px] font-bold text-2xl" />
                <input asp-for="Email" type="text"
                       name="email"
                       placeholder="Email"
                       class="bg-white rounded-lg shadow h-[60px] w-[516px] p-[14px] font-bold text-2xl" />
                <div class="h-[60px] w-[516px] p-[14px] font-bold text-2xl">
                    <label class="radio-inline font-bold text-2xl">
                        @Html.RadioButtonFor(model => model.GioiTinh, "Nam", new {@name="GioiTinh"})
                        Nam
                    </label>
                    <label class="radio-inline p-[100px] font-bold text-2xl">
                        @Html.RadioButtonFor(model => model.GioiTinh, "Nữ", new {@name="GioiTinh"})
                        Nữ
                    </label>
                </div>
                <input asp-for="Password" type="password"
                       name="password"
                       placeholder="Mật khẩu"
                       class="bg-white rounded-lg shadow h-[60px] w-[516px] p-[14px] font-bold text-2xl" />
                <input asp-for="ConfirmPassword" type="password"
                       name="confirmPassword"
                       placeholder="Nhập lại mật khẩu"
                       class="bg-white rounded-lg shadow h-[60px] w-[516px] p-[14px] font-bold text-2xl" />
                <div class="flex items-center justify-end gap-x-[23px]">
                    <button type="submit"
                            class="register bg-[#FFB23F] text-white rounded-lg shadow h-[60px] w-[180px] p-[14px] font-bold text-2xl hover:bg-opacity-60">
                        Đăng ký
                    </button>
                    <button class="change-login bg-white text-[#AFADB5] rounded-lg shadow h-[60px] w-[180px] p-[14px] font-bold text-2xl hover:bg-opacity-60"
                            type="button">
                        <a href="~/Login" class="h-[60px] w-[180px] p-[14px] font-bold text-2xl">Hủy</a>
                    </button>
                </div>
            </div>
        </form>
    </div>
