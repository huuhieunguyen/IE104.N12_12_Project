@inject Funiture_Project.Areas.Admin.Models.AdminSideBarService _AdminSideBarService;

@{
    ViewData["Title"] = "SuaSP";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section Sidebar{
    @Html.Raw(_AdminSideBarService.renderHtml())
}
    @{
    _AdminSideBarService.setActive("SanPham", "Index", "Admin");
}
<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        display: none;
    }
</style>
<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->

    <div class="d-flex justify-content-between">
        <h1 class="h3 mb-2 text-gray-800">
            Chỉnh sửa thông tin sản phẩm
        </h1>
        <a href="#" class="btn btn-danger btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-trash"></i>
            </span>
            <span class="text">Xóa thông tin</span>
        </a>
    </div>
    <hr class="my-12" />

    <div class="mt-10"></div>
    <!-- DataTales Example -->
    <div class="container gap-3">
        <div class="row mb-4">
            <label class="col-2" for="Masp">Mã sản phẩm</label>
            <input readonly
                   class="col-4 form-control bg-white"
                   type="text"
                   name="Masp"
                   id="Masp" />
        </div>
        <div class="row mb-4">
            <label class="col-2" for="Madm">Mã danh mục</label>
            <input class="col-4 form-control"
                   type="text"
                   name="Madm"
                   id="Madm" />
        </div>
        <div class="row mb-4">
            <label class="col-2" for="Tensp">Tên sản phẩm</label>
            <input class="col-4 form-control"
                   type="text"
                   name="Tensp"
                   id="Tensp" />
        </div>
        <div class="row mb-4">
            <label class="col-2" for="Nuocsx">Nước sản xuất</label>
            <input class="col-4 form-control"
                   type="text"
                   name="Nuocsx"
                   id="Nuocsx" />
        </div>
        <div class="row mb-4">
            <label class="col-2" for="Dongia">Đơn giá</label>
            <input class="col-4 form-control"
                   type="number"
                   inputmode="decimal"
                   min="0"
                   step=".01"
                   name="Dongia"
                   id="Dongia" />
        </div>
        <div class="row mb-4">
            <label class="col-2" for="Tongsl">Tổng số lượng</label>
            <input class="col-4 form-control"
                   type="number"
                   min="0"
                   name="Tongsl"
                   id="Tongsl" />
        </div>
        <div class="row mb-4">
            <label class="col-2" for="Hinhanh">Hình ảnh</label>
            <input class="col-4 form-control" type="file" id="Hinhanh" />
        </div>
    </div>
    <hr class="my-12" />

    <!-- Return or Save info -->
    <div class="d-grid d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Quay lại</span>
        </a>
        <a href="#" class="btn btn-success btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-check"></i>
            </span>
            <span class="text">Lưu thông tin</span>
        </a>
    </div>
</div>
