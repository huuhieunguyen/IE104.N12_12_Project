
@{
    ViewData["Title"] = "ThemNV";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@inject Funiture_Project.Areas.Admin.Models.AdminSideBarService _AdminSideBarService;
@section Sidebar{
    @Html.Raw(_AdminSideBarService.renderHtml())
}
    @{
    _AdminSideBarService.setActive("NhanVien", "Index", "Admin");
}
<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->

    <div class="d-flex justify-content-between">
        <h1 class="h3 mb-2 text-gray-800">Thêm thông tin nhân viên</h1>
    </div>
    <hr class="my-12" />

    <div class="mt-10"></div>
    <!-- DataTales Example -->
    <div class="container gap-3">
        <div class="row mb-4">
            <label class="col-2" for="Mauser">Mã User</label>
            <input readonly
                   class="col-4 form-control bg-white"
                   type="text"
                   name="Mauser"
                   id="Mauser" />
        </div>
        <div class="row mb-4">
            <label class="col-2" for="Hoten">Họ tên</label>
            <input class="col-4 form-control"
                   type="text"
                   name="Hoten"
                   id="Hoten" />
        </div>
        <div class="row mb-4">
            <label class="col-2" for="email">Email</label>
            <input class="col-4 form-control"
                   type="email"
                   name="email"
                   id="email" />
        </div>
        <div class="row mb-4">
            <label class="col-2" for="Username">Username</label>
            <input class="col-4 form-control"
                   type="text"
                   name="Username"
                   id="Username" />
        </div>
        <div class="row mb-4">
            <label class="col-2" for="Password">Password</label>
            <input class="col-4 form-control"
                   type="text"
                   name="Password"
                   id="Password" />
        </div>
        <div class="row mb-4">
            <label class="col-2" for="Sdt">Số điện thoại</label>
            <input class="col-4 form-control"
                   type="text"
                   name="Sdt"
                   id="Sdt" />
        </div>
        <div class="row mb-4">
            <label class="col-2" for="Diachi">Địa chỉ</label>
            <input class="col-4 form-control"
                   type="text"
                   name="Diachi"
                   id="Diachi" />
        </div>
        <div class="row mb-4">
            <label class="col-2" for="Thanhpho">Thành phố</label>
            <input class="col-4 form-control"
                   type="text"
                   name="Thanhpho"
                   id="Thanhpho" />
        </div>
        <div class="row mb-4">
            <label class="col-2" for="Ngaytao">Ngày tạo</label>
            <input class="col-4 form-control"
                   type="date"
                   name="Ngaytao"
                   id="Ngaytao" />
        </div>
        <div class="row mb-4">
            <label class="col-2" for="Quyen">Quyền</label>
            <select class="form-control" id="Quyen" style="width: auto">
                <option selected>Chọn...</option>
                <option value="1">Nhân viên</option>
                <option value="2">Quản lý</option>
            </select>
        </div>
    </div>
    <hr class="my-12" />

    <!-- Return or Save info -->
    <div class="d-grid d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Quay lại</span>
        </a>
        <a href="#" class="btn btn-success btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-check"></i>
            </span>
            <span class="text">Tạo mới</span>
        </a>
    </div>
</div>


